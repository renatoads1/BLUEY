            <th>C.CAD</th>
            <th>ACTION</th>
            </tr>
        </thead>
        <tbody>
        @if (Model!=null)
        {
            @foreach (var debit in Model)
            {
                <tr>
                    <td>@debit.EMPRESA_</td>
                    @* <td>@debit.CHAVE</td> *@
                    <td>@debit.FILIAL</td>
                    <td>@debit.COD_PESSOA</td>
                    <td>@debit.INSCR_FEDERAL</td>
                    <td>@debit.NOME</td>
                    <td>@debit.CFOP</td>
                    <td>@debit.TABELA</td>
                    @* <td>@debit.NUMERONF</td> *@
                    <td>@debit.MOVIMENTO</td>
                    <td>
                        <select class="form-select selectpicker w-auto" data-live-search="true">
                            @foreach (var item in @debit.TABELACTBFISLCTOCTB)
                            {
                                <option value="@item.CONTACTB">@item.CONTACTB</option>
                            }
                        </select>
                    </td>
                    <td>aaa</td>
                    <td>aaaaaaaaaaaaaaaa</td>
                </tr>
            }
        }else
            {
                <tr>
@*                     <td></td>
                    <td></td> *@
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                    <td></td>
                </tr>
            }

        </tbody>
    </table>

<!-- Inicializar o Bootstrap Select -->
<script>
    $(document).ready(function () {
        $('.selectpicker').selectpicker();
    });
</script>