@using Microsoft.AspNetCore.Identity
@model List<IdentityRole>

@{
    ViewBag.Title = "Adicionar Regra ao Usuário";
}

<h2>Adicionar Regra ao Usuário</h2>

<form asp-action="UpdateRoleUser" method="post">
    <div class="form-group col-md-6">
        <label for="UserId">Selecione um Usuário:</label>
        <select id="UserId" name="UserId" class="form-control row-cols-lg-3">
            <option value="">Usuário</option>
            @foreach (var usuario in ViewBag.Usuarios)
            {
                <option value="@usuario.Id">@usuario.UserName</option>
            }
        </select>
    </div>
    <div class="form-group col-md-6">
        <label for="RoleId">Selecione uma Regra:</label>
        <select id="RoleId" name="RoleId" class="form-control">
            <option value="">Regra</option>
            @foreach (var regra in Model)
            {
                <option value="@regra.Id">@regra.Name</option>
            }
        </select>
    </div>

    <button type="submit" class="btn btn-primary">Adicionar</button>
</form>
