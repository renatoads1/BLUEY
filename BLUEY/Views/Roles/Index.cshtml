@model IEnumerable<Microsoft.AspNetCore.Identity.IdentityRole>

<h1>Gerenciamento de Roles</h1>
<a asp-action="Create" class="btn btn-primary">Criar Novo Role</a>
<table class="table">
    <thead>
        <tr>
            <th>Nome do Role</th>
            <th>Ações</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var role in Model)
        {
            <tr>
                <td>@role.Name</td>
                <td>
                    <a asp-action="Delete" asp-route-id="@role.Id" class="btn btn-danger">Excluir</a>
                </td>
            </tr>
        }
    </tbody>
</table>
